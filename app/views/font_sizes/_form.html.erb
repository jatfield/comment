<%= form_for(font_size) do |f| %>
  <% if font_size.errors.any? %>
    <div id="error_explanation">
      <h2><%= font_size.errors.count %> hiba miatt nem menthető:</h2>

      <ul>
      <% font_size.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :value %>
    <%= f.number_field :value %>
  </div>

  <div class="actions">
    <%= f.submit "Mentés" %>
  </div>
<% end %>
