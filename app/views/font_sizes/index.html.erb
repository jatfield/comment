<p id="notice"><%= notice %></p>

<h1>Font Sizes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @font_sizes.each do |font_size| %>
      <tr>
        <td><%= font_size.name %></td>
        <td><%= font_size.value %></td>
        <td><%= link_to 'Show', font_size %></td>
        <td><%= link_to 'Edit', edit_font_size_path(font_size) %></td>
        <td><%= link_to 'Destroy', font_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Font Size', new_font_size_path %>
