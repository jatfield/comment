<h1>Betűméretek</h1>

<table>
  <thead>
    <tr>
      <th>Megnevezés</th>
      <th>Érték</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @font_sizes.each do |font_size| %>
      <tr>
        <td><%= font_size.name %></td>
        <td><%= font_size.value %></td>
        <td><%= link_to 'Adatok', font_size %></td>
        <td><%= link_to 'Szerkesztés', edit_font_size_path(font_size) %></td>
        <td><%= link_to 'Törlés', font_size, method: :delete, data: { confirm: 'Biztod törlöd?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Új betűméret', new_font_size_path %>
