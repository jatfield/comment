<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= post.errors.count %> hiba miatt nem menthető:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_area :full_text, class: "tinymce" %>
    <%= tinymce %>
  </div>

  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= f.label :number %>
    #<%= post.number %>
  </div>

  <div class="field">
    <%= f.label :topic_id %>
    <%= post.topic.name %>
  </div>

  <div class="field">
    <%= f.label :answer_to_id %>
    #<%= post.answer_to.try(:number) %>
  </div>

  <div class="actions">
    <%= f.submit "Mentés" %>
  </div>
<% end %>
