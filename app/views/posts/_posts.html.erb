<% @posts.each do |p| %>
  <div class="post">
    <div class="post_header">
      <span class = "post_user"> 
        <% if p.user.avatar %>
          <span class ="post_avatar"><%= link_to image_tag(p.user.avatar.picture.url, class:"avatar", title:"#{p.user.username}"), p.user %></span>
        <% else %>
          <span class ="post_username"><%= link_to p.user.username, p.user %></span>
        <% end %>
      </span> 
      <span class = "post_time"> 
        <%= day_beforize(p.created_at) %>
      </span> 
      <span class = "post_answer"> 
        <%= link_to "Válasz", "#", title: "#{p.id}", class: "post_answer_link" %>
      </span> 
      <span class = "post_number"> 
        <%= link_to_if(is_admin? || current_user == p.user, image_tag("edit.png", class: "button"), edit_post_path(p)){} %>#<%= p.number %>
      </span> 
      <span class = "post_votes" id = <%="post_votes_#{p.id}"%>> 
        <%= render partial: "posts/vote_box", locals:  {p: p}%>
      </span> 
    </div>
    <div class = "post_text">
      <%= raw p.full_text %>
      <% unless p.uploads.empty? %>
        <div class = "post_uploads">
          <%= render partial: "uploads/thumb_gallery", locals:  {uploads: p.uploads, post: p} %>
        </div>
      <% end %>
    </div>
    <p class = "post_user_signature">
      <%= p.user.signature %>
    </p>
    <% if p.answer_to %>
      <div class = "answer_post">
        <p class = "post_answer_to">
          <%= "Válasz erre: ##{p.answer_to.number}" if p.answer_to %>
        </p>
        <div class = "post_chain">
          <% p.question_chain.each do |l| %>
            <div class="post_header">
              <span class = "post_user"> 
                <% if l.user.avatar %>
                  <%= link_to image_tag(l.user.avatar.picture.url, class:"avatar", alt:"#{l.user.username}"), l.user %>
                  <% else %>
                    <%= link_to l.user.username, l.user %>
                <% end %>
              </span> 
              <span class = "post_time"> 
                <%= day_beforize(l.created_at) %>
              </span> 
              <span class = "post_number"> 
                #<%= l.number %>
              </span> 
            </div>
            <div class = "post_text">
              <%= raw l.full_text %>
              <% unless l.uploads.empty? %>
                <div class = "post_uploads">
                  <%= render partial: "uploads/thumb_gallery", locals:  {uploads: l.uploads, post: l} %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
