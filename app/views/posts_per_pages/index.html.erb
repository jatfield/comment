<p id="notice"><%= notice %></p>

<h1>Posts Per Pages</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts_per_pages.each do |posts_per_page| %>
      <tr>
        <td><%= posts_per_page.value %></td>
        <td><%= link_to 'Show', posts_per_page %></td>
        <td><%= link_to 'Edit', edit_posts_per_page_path(posts_per_page) %></td>
        <td><%= link_to 'Destroy', posts_per_page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

