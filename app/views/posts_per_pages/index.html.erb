<h1>Oldalankénti hozzászólásszámok</h1>

<table>
  <thead>
    <tr>
      <th>Érték</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts_per_pages.each do |posts_per_page| %>
      <tr>
        <td><%= posts_per_page.value %></td>
        <td><%= link_to 'Adatok', posts_per_page %></td>
        <td><%= link_to 'Szerkesztés', edit_posts_per_page_path(posts_per_page) %></td>
        <td><%= link_to 'Törlés', posts_per_page, method: :delete, data: { confirm: 'Biztos törlöd?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Új oldalankénti hozzászólásszám', new_posts_per_page_path %>
