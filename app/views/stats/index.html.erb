<div id = "stats_table">
  <table>
    <thead>
      <tr>
        <th colspan=2><%= link_to "<", stats_path(from: @from - 1.months, to: @to - 1.months) %> <%= l @from, format: :dateonly  %> - <%= l @to, format: :dateonly %> <%= link_to ">", stats_path(from: @from + 1.months, to: @to + 1.months) %></th>
      </tr>
      <tr>
        <th>User</th>
        <th>Hozzászólások</th>
      </tr>
    </thead>
    <tbody>
      <% @count.each do |k, v| %>
        <tr>
          <td><%= k %></td>
          <td><%= v %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= content_tag(:div,"", id: "stats_chart", data: {series: @count, sum: @sum_count}) %>
