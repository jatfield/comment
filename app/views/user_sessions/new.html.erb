<%= form_for @user_session do |f| %>
  <% if @user_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user_session.errors.count %> hiba a bejelentkezési kísérlettel:</h2>

      <ul>
      <% @user_session.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :username %>
  <%= f.text_field :username %>
 
  <%= f.label :password %> 
  <%= f.password_field :password %>
  <br />
  <%= f.submit "Bejelentkezés" %>

<% end %>
