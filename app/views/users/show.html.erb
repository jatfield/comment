<h3><%= @user.username %><%= link_to_if(is_admin? || current_user == @user, image_tag("edit", class:"button"), edit_user_path(@user)){} %> </h3>


<p>

  <strong>E-mail:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Avatar:</strong>
  <% if @user.avatar %>
    <%= image_tag @user.avatar.picture.url %>
    <%= link_to_if(is_admin? || current_user == @user, image_tag("edit", class: "button"), edit_avatar_path(@user.avatar, user_id: @user.id)) %>
  <% else %>
    <%= link_to_if(is_admin? || current_user == @user, image_tag("add", class: "button"), new_user_avatar_path(@user)) %>
  <% end %>
</p>

<p>
  <strong>Aláírás:</strong>
  <%= @user.signature %>
</p>

<p>
  <strong>Név:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Aktív?</strong>
  <%= @user.active %>
</p>

<p>
  <strong>Bejelntkezések száma:</strong>
  <%= @user.login_count %>
</p>

<p>
  <strong>Utolsó aktivitás:</strong>
  <%= @user.last_request_at %>
</p>

<p>
  <strong>Aktuális bejelentkezés időpontja:</strong>
  <%= @user.current_login_at %>
</p>

<p>
  <strong>Utolsó bejelentkezés időpontja:</strong>
  <%= @user.last_login_at %>
</p>

<p>
  <strong>Jelenlegi IP:</strong>
  <%= @user.current_login_ip %>
</p>

<p>
  <strong>Utolsó IP:</strong>
  <%= @user.last_login_ip %>
</p>

